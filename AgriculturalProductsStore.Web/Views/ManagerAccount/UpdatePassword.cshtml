@using AgriculturalProductsStore.Web.ViewModels.ManagerAccount
@model AgriculturalProductsStore.Web.ViewModels.ManagerAccount.UpdatePasswordViewModel

@{
    ViewData["Title"] = "UpdatePassword";
    Layout = "~/Views/Membership/_MembershipLayout.cshtml";
}


<div class="col-9">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <h4>Thông tin tài khoản</h4>
                    <hr>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <form method="post" asp-action="UpdatePassword" asp-controller="ManagerAccount" asp-route-returnUrl="@ViewData[" ReturnUrl"]">
                        <div class="form-group row">
                            <label for="username" class="col-4 col-form-label">Mật khẩu hiện tại</label>
                            <div class="col-8">
                                <input asp-for="PasswordOld" placeholder="Mật khẩu hiện tại" class="form-control here" required="required" type="password">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="name" class="col-4 col-form-label">Mật khẩu mới</label>
                            <div class="col-8">
                                <input asp-for="Password" placeholder="Mật khẩu mới" class="form-control here" type="password">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="lastname" class="col-4 col-form-label">Xác nhận mật khẩu</label>
                            <div class="col-8">
                                <input  asp-for="ConfirmPassword" placeholder="Xác nhận mật khẩu" class="form-control here" type="password">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="offset-4 col-8">
                                <button name="submit" type="submit" class="btn btn-primary">Cập nhật</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>


