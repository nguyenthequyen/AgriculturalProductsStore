
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_LayoutManagerAccount.cshtml";
}
@section Styles {
    <link href="~/css/form-account.css" rel="stylesheet" />
}
<div id="logreg-forms">
    <form action="/reset/password/" class="form-reset">
        <h1 class="h3 mb-3 font-weight-normal pb-3" style="text-align: center"> Lấy lại mật khẩu</h1>
        <input type="email" id="resetEmail" class="form-control" placeholder="Email" required="" autofocus="">
        <button class="btn btn-primary btn-block" type="submit">Tiếp tục <i class="fas fa-angle-right"></i></button>
        <a asp-controller="Account" asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]" id="cancel_reset"><i class="fas fa-angle-left"></i> Đăng nhập</a>
    </form>
</div>

